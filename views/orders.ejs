<!doctype html>
<html>
<head>
    <title>Barista App</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <h3>Completed</h3>
          <ul class="messages">
          <% for(var i=0; i<orders.length; i++) {%>
           <% if (orders[i].complete === true){%>
            <li class="message">
              <span><%= orders[i].order %></span>
              <span><%= orders[i].name %></span>
            </li>
          <% } %>
          <% } %>
          </ul>
        </div>
        <div class="col-sm-6">

          <form action="completeorder" method="POST">
          <h3>Not Completed</h3>
          <ul class="messages">
              <% for(var i=0; i<orders.length; i++) {%>
                  <% if (orders[i].complete !== true){%>
                <li class="message">
                  <span><%= orders[i].order %></span>
                  <span><%= orders[i].name %></span>
                  <input type="checkbox" name="mongoid" value="<%= orders[i]._id %>">
                  <input type="hidden" name="user" value="<%= user.local.email %>" >
                </li>
               <% } %>
              <% } %>
              </ul>
              <button type="submit" >Complete</button>
            </form>

</div>

<script src="main.js"></script>

</body>
</html>
